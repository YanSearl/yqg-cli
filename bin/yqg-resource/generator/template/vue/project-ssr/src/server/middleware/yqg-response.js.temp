import createLogger from 'yqg-common/util/logger';

const logger = createLogger('yqg-response');

export default () => async (ctx, next) => {
    try {
        await next();
    } catch (err) {
        logger.error(err);
        ctx.body = 'The server is sleeping.'; // here we can handle uncaught common err
    }
};
